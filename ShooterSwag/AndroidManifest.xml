<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.pacificu.cs.duckhunter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/duckshooter_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="edu.pacificu.cs.duckhunter.DuckHunterMain"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.pacificu.cs.duckhunter.GameActivity"
            android:label="@string/sBirdHunter"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="edu.pacificu.cs.duckhunter.SettingsActivity"
            android:label="@string/sSettings" >
        </activity>
    </application>

</manifest>